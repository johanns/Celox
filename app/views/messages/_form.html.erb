<div class="container mbody">
	<div id="form_error" class="alert-message error" style="display: none">
		<strong><%= t('.body_empty') %></strong>
	</div>

	<%= form_for(@message, :remote => true, :style => "form-stacked") do |f| %>
		<%= f.text_area :body, :cols => "0", :rows => "0" %>
			<div class="well" style="margin-top: 10px">
				<input class="btn btn-large btn-primary" name="commit" type="submit" value="<%= t('.secure_message') %>" onclick="EncodeThis()" data-disable-with="Submitting..." />
			</div>
	<% end %>

	<div id="form_spinner">
		
	</div>

	<div id="form_result" class="container" style="Display: none">	
		<div style="margin-top: 80px">
			<h4><%= t('.your_link') %></h4>
			<input id="stub_link" type="text" onclick="this.select();" style="width: 99%; height: 2.2em; font-size:2.2em" />

		</div>
		<div class="well" style="margin-top: 10px">
			<input value="<%= t('.new_message') %>" class="btn btn-large btn-primary" type="button" onclick="location.href='<%= new_message_path %>'" />
		</div>
	</div>
</div>